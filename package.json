{
  "name": "tailwind-nextjs-starter-blog",
  "version": "2.2.0",
  "private": true,
  "scripts": {
    "start": "next dev",
    "dev": "cross-env NEXT_PUBLIC_COMMIT_HASH=$(git rev-parse HEAD) INIT_CWD=$PWD NODE_OPTIONS='--inspect' next dev",
    "dev:tp": "cross-env NEXT_PUBLIC_COMMIT_HASH=$(git rev-parse HEAD) INIT_CWD=$PWD NODE_OPTIONS='--inspect' next dev --turbopack",
    "build": "cross-env NODE_OPTIONS='--experimental-json-modules' node src/utils/prebuild.mjs && cross-env NEXT_PUBLIC_COMMIT_HASH=$(git rev-parse HEAD) INIT_CWD=$PWD next build && cross-env NODE_OPTIONS='--experimental-json-modules' node src/utils/postbuild.mjs",
    "serve": "next start",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "next lint --fix --dir pages --dir app --dir components --dir lib --dir layouts --dir scripts",
    "prepare": "husky",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@headlessui/react": "2.2.0",
    "@million/lint": "^1.0.12",
    "@next/bundle-analyzer": "15.1.0",
    "@openpanel/nextjs": "^1.0.5",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/user-event": "^14.5.2",
    "@vercel/analytics": "^1.3.1",
    "@vercel/speed-insights": "^1.0.14",
    "@zhouhua-dev/remark-media-card": "^1.1.6",
    "autoprefixer": "^10.4.20",
    "body-scroll-lock": "^4.0.0-beta.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "contentlayer2": "0.4.6",
    "esbuild": "0.24.0",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "hast-util-from-html-isomorphic": "^2.0.0",
    "image-size": "1.1.1",
    "lightgallery": "^2.7.2",
    "lucide-react": "^0.468.0",
    "moment": "^2.30.1",
    "next": "15.1.0",
    "next-contentlayer2": "0.4.6",
    "next-themes": "^0.4.0",
    "nextjs-toploader": "^3.7.15",
    "pliny": "0.4.0",
    "postcss": "^8.4.38",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hot-toast": "^2.4.1",
    "react-remove-scroll-bar": "^2.3.6",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-citation": "^2.1.2",
    "rehype-katex": "^7.0.1",
    "rehype-preset-minify": "7.0.1",
    "rehype-prism-plus": "^2.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "remark-github-blockquote-alert": "^1.2.1",
    "remark-math": "^6.0.0",
    "remark-pangu": "^2.2.0",
    "sharp": "^0.33.5",
    "swr": "^2.2.5",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.13",
    "tailwindcss-animate": "^1.0.7",
    "unist-util-visit": "^5.0.0",
    "vaul": "^1.1.1"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/mdx": "^2.0.13",
    "@types/react": "npm:types-react@19.0.0-rc.1",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "2.1.8",
    "@vitest/ui": "^2.1.8",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.0.0",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "tailwindcss-radix-colors": "^1.4.1",
    "typescript": "^5.5.4",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "yarn prettier --write"
    ]
  },
  "packageManager": "yarn@4.5.3",
  "resolutions": {
    "@types/react": "npm:types-react@19.0.0-rc.1"
  }
}
